<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.essths.android.TicketInformationActivity"
    android:background="@color/followingBg"
    >

    <com.vipulasri.ticketview.TicketView

        android:id="@+id/ticketView"
        android:layout_width="match_parent"

        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"

        app:borderWidth="1dp"
        app:cornerRadius="15dp"
        app:dividerType="dash"
        app:orientation="horizontal"
        app:scallopPositionPercent="60"
        app:scallopRadius="10dp"
        app:showBorder="true"
        app:showDivider="true"
        app:ticketElevation="14dp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="65dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="18dp"
        android:orientation="vertical"
        android:gravity="center_vertical"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="370dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="#212121"
                android:fontFamily="sans-serif-black"
                android:textSize="14dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:id="@+id/date"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="movie_date"
android:id="@+id/datee"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/material_grey_300"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:fontFamily="sans-serif-black"
                android:textSize="14dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:id="@+id/place"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="movie_time"
android:id="@+id/placee"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/material_grey_300"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:fontFamily="sans-serif-black"
                android:textSize="14dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:id="@+id/price"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="movie_seat"
android:id="@+id/pricee"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp"
        android:text="8888-8888-8888" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginStart="17dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Title"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="10dp"
        android:text="description" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_above="@+id/textView9"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher_round" />


</RelativeLayout>
